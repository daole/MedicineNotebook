<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreamdigitizers.drugmanagement">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:glEsVersion="0x00020000"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title__app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.implementations.activities.MainActivity"
            android:windowSoftInputMode="stateUnspecified|adjustResize"
            android:label="@string/title__app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".views.implementations.activities.CameraActivity"
            android:theme="@style/FullScreenTheme"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="net.care.apple.mm.CameraActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.MedicineContentProvider"
            android:authorities="com.dreamdigitizers.drugmanagement.contentprovider">
        </provider>
    </application>

</manifest>
